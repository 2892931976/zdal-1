<?xml version="1.0" encoding="GBK"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans.xsd"
	default-autowire="byName">
	
	<bean id="merchant" class="com.alipay.zdal.client.config.bean.ZdalAppBean">
		<property name="appName" value="merchant" />
		<property name="dbmode" value="dev" />
		<property name="appDataSourceList">
			<list>		
				<ref bean="merchantDataSource" />
			</list>
		</property>
	</bean>
	
	<bean id="merchantDataSource" class="com.alipay.zdal.client.config.bean.AppDataSourceBean">
		<property name="appDataSourceName" value="merchantDataSource" />
		<property name="dataBaseType" value="ORACLE" />
		<property name="configType" value="GROUP" />
		
		<property name="physicalDataSourceSet">
			<set>
				<ref bean="merchantDataSourcewriteDataSource"/>
				<ref bean="merchantDataSourceread01DataSource"/>
				<ref bean="merchantDataSourceread02DataSource"/>
				<ref bean="merchantDataSourceread03DataSource"/>
				<ref bean="merchantDataSourceread04DataSource"/>
			</set>
		</property>
		<property name="groupDataSourceRuleMap">
			<map>
				<entry key="group_0" value="writeDataSource:r0w10,read01DataSource:r10w0,read02DataSource:r10w0,read03DataSource:r10w0,read04DataSource:r10w0" />
			</map>
		</property>
	</bean>
	

	<bean id="merchantDataSourcewriteDataSource" class="com.alipay.zdal.client.config.bean.PhysicalDataSourceBean" >
		<property name="name" value="writeDataSource" />
		<property name="jdbcUrl" value="jdbc:oracle:thin:@cifdb.devdb.alipay.net:1521/cifdb" />
	    <property name="userName" value="merchant" />
	    <property name="password" value="ali88" />
	    <property name="minConn" value="4" />
	    <property name="maxConn" value="9" />
	    <property name="blockingTimeoutMillis" value="500" />
	    <property name="idleTimeoutMinutes" value="30" />
	    <property name="preparedStatementCacheSize" value="0" />
	    <property name="queryTimeout" value="180" />
	    <property name="connectionProperties">
	    	<map>
	    		<entry key="SetBigStringTryClob" value="true"/>
	    		<entry key="defaultRowPrefetch" value="20"/>
	    		<entry key="oracle.jdbc.implicitStatementCacheSize" value="30"/>
	    		<entry key="oracle.net.CONNECT_TIMEOUT" value="10000"/>
	    		<entry key="oracle.jdbc.ReadTimeout" value="60000"/>
	    	</map>
	    </property>
	</bean>

